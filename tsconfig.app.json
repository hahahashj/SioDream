{
  // 如果你已经安装了 @vue/tsconfig，请恢复 "extends" 并运行 `npm i -D @vue/tsconfig`
  // "extends": "@vue/tsconfig/tsconfig.web.json",

  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],

  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // 增强的本地兼容配置（作为无法解析 extends 的 fallback）
    "verbatimModuleSyntax": true,
    "types": ["vite/client"],
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"]
  }
}
