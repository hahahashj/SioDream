{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "vitest.setup.ts"
  ],
  "exclude": [
    "**/*.js",
    "**/*.vue.js",
    "node_modules",
    "dist",
    ".vercel",
    ".vite",
    "coverage"
  ],
  "compilerOptions": {
    "composite": true,
    "lib": [],
    "types": ["node", "jsdom"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  }
}